<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee           http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginControlador</servlet-name>
        <servlet-class>controlador.LoginControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PuestosControlador</servlet-name>
        <servlet-class>controlador.PuestosControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpleadosControlador</servlet-name>
        <servlet-class>controlador.EmpleadosControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteControlador</servlet-name>
        <servlet-class>controlador.ClienteControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProveedorControlador</servlet-name>
        <servlet-class>controlador.ProveedorControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarcaControlador</servlet-name>
        <servlet-class>controlador.MarcaControlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControlador</servlet-name>
        <url-pattern>/LoginControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PuestosControlador</servlet-name>
        <url-pattern>/PuestosControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmpleadosControlador</servlet-name>
        <url-pattern>/EmpleadosControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteControlador</servlet-name>
        <url-pattern>/ClienteControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProveedorControlador</servlet-name>
        <url-pattern>/ProveedorControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarcaControlador</servlet-name>
        <url-pattern>/MarcaControlador</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
